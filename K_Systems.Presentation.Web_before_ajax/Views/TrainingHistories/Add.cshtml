@using K_Systems.Data.Core.Domain
@using System.Web.Http.Routing

@model TrainingHistory

@{
    ViewBag.Title = "Add New Training History";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}


@using (Html.BeginForm("Add", "Employees", FormMethod.Post, new { novalidate = "novalidate", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h2>Add New Training History</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">Required Data</div>
        <div class="panel-body">

            <div class="row">
                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.trainingDate, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.trainingDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.trainingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.Employee, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Employee.fName, new { htmlAttributes = new { @class = "form-control", data_auto = Url.Action("EmployeeAuto") } })
                        @Html.ValidationMessageFor(model => model.Employee.fName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.Course.name, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Course.name, new { htmlAttributes = new { @class = "form-control", data_auto = Url.Action("CourseAuto") } })
                        @Html.ValidationMessageFor(model => model.Course.name, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.result, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.result, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.result, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-4">
            <div class="col-md-offset-2 col-md-9">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="col-lg-1">
            @Html.ActionLink("Back to List", "Index")

        </div>
    </div>








}


@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/UIEditors.js"></script>
}

@section Styles{
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
}












