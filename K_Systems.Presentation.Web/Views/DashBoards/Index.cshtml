
@{
    ViewBag.Title = "Index dashboard";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}

<h2>HR DashBoard</h2>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="info-box">
            <span class="glyphicon glyphicon-user info-box-icon"></span>
            <div class="info-box-content">
                <span class="info-box-text">Employees</span>
                <span class="info-box-number">@ViewBag.employeesCount</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="info-box">
            <span class="glyphicon glyphicon-usd info-box-icon"></span>
            <div class="info-box-content">
                <span class="info-box-text">Salaries</span>
                <span class="info-box-number">@(string.Format("{0:C}", ViewBag.employeesSalaries))</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="info-box">
            <span class="glyphicon glyphicon-barcode info-box-icon"></span>
            <div class="info-box-content">
                <span class="info-box-text">Inventory</span>
                <span class="info-box-number">6924</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="info-box">
            <span class="glyphicon glyphicon-apple info-box-icon"></span>
            <div class="info-box-content">
                <span class="info-box-text">CPU Traffic</span>
                <span class="info-box-number">90<small>%</small></span>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-4">
    <div class="info-box-wide bg-yellow">
        <span class="info-box-icon glyphicon glyphicon-inbox" ></span>
        <div class="info-box-content">
            <span class="info-box-text">Inventory</span>
            <span class="info-box-number">5,200</span>

            <div class="progress">
                <div class="progress-bar" style="width: 50%"></div>
            </div>
            <span class="progress-description">
                50% Increase in 30 Days
            </span>
        </div>
    </div>
</div>

<div class="col-lg-4">
    <div class="info-box-wide bg-red">
        <span class="info-box-icon glyphicon glyphicon-calendar"></span>
        <div class="info-box-content">
            <span class="info-box-text">Effeiciency</span>
            <span class="info-box-number">12,3652</span>

            <div class="progress">
                <div class="progress-bar" style="width:93%"></div>
            </div>
            <span class="progress-description">
                93% Increase in 145 Days
            </span>
        </div>
    </div>
</div>

<div class="col-lg-4">
    <div class="info-box-wide bg-blue">
        <span class="info-box-icon glyphicon  glyphicon-alert"></span>

        <div class="info-box-content">
            <span class="info-box-text">Inventory</span>
            <span class="info-box-number">5,200</span>
            <div class="progress">
                <div class="progress-bar" style="width: 30%"></div>
            </div>
            <span class="progress-description">
                30% Increase in 20 Days
            </span>
        </div>
    </div>
</div>

<div class="col-lg-6">
    <canvas id="Chart" width="100" height="100"></canvas>
</div>

<div class="col-lg-6">
    <canvas id="Chart1" width="100" height="100"></canvas>
</div>




@section Scripts{
    <script src="~/Scripts/ChartJS.js"></script>
    <script src="~/Scripts/HRDashCharts.js"></script>
}




