

    @model Nullable<DateTime>

    @{
        DateTime dt = DateTime.Now;
        if (Model != null)
        {
            dt = (System.DateTime)Model;

        }
        
        @Html.TextBox("",
       Model == null ? "":Model.Value.ToString("dd-MMM-yyyy") ,
       new {
           @class = "form-control",
           data_date="true",
           autocomplete="off",
           placeholder="ex: 1-Jan-2010"
       })
    }
